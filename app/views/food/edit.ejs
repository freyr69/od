<div class="row">
    <div class="col-md-6 col-md-offset-3 text-center">
        <div class="widget">
            <div class="header">
                <h3>Food - Edit</h3>
            </div>
            <div class="toppad2">
                <% form_for("food", {controller: '/food', action: '/edit'}, function(f){ %>

                <%- f.hidden_field("date") %>
                <%- hidden_field_tag("_csrf", {value: token}) %>


                <div class="control-group">
                    <%- f.label_for("title", {class : "control-label"}) %>
                    <%- f.text_field("title", {class: "form-control"}) %>
                </div>

                <div class="control-group">
                    <%- f.label_for("points", {class : "control-label"}) %>
                    <%- f.number_field("points", {class: "form-control"}) %>
                </div>


                <%- f.submit("Edit", {class : 'btn btn-warning'}) %>
                <% }) %>


            </div>
        </div>        
    </div>
</div>
