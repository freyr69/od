<div class="row">
    <div class="col-md-6 col-md-offset-3 text-center">
        <div class="widget">
            <div class="header">
                <h3>Food - Admin</h3>
            </div>
            <div class="toppad2">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-condensed">
                        <thead>
                            <tr>
                                <td>Title</td>
                                <td>Points</td>
                                <td></td>
                            </tr>
                        </thead>
                        <tbody>

                            <% foods.forEach(function(food){ %>
                            <tr>
                                <td><%- food.title %></td>
                                <td><%- food.points %></td>
                                <td>
                                    <a href="<%- '/food/edit/'+food.id %>"><span class="glyphicon glyphicon-edit"></span></a>
                                    <a href="<%- '/food/delete/'+food.id %>"><span class="glyphicon glyphicon-remove"></span></a>
                                </td>
                            </tr>
                            <% }); %>
                        </tbody>
                    </table>
                    <a class="btn btn-primary" href="/food/new"><span class="glyphicon glyphicon-plus"></span> Add New...</a>
                </div>
            </div>
        </div>        
    </div>
</div>

