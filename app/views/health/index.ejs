<div class="row">
    <div class="col-md-6 col-md-offset-3 text-center">
        <div class="widget">
            <div class="header">
                <h3>Health - Log</h3>
            </div>
            <div class="toppad2">
                <% form_for("health", {controller: '/health', action: '/log'}, function(f){ %>
                
                <%- f.hidden_field("date") %>
                <%- hidden_field_tag("_csrf", {value: token}) %>
                
                <div class="control-group">
                    <%- f.label_for("weight", {class : "control-label"}) %>
                    <%- f.text_field("weight", {class: "form-control"}) %>
                </div>

                <div class="control-group">
                    <%- f.label_for("bodyFat", {class : "control-label"}) %>
                    <%- f.text_field("bodyFat", {class: "form-control"}) %>
                </div>
                
                <div class="control-group">
                    <%- f.label_for("waist", {class : "control-label"}) %>
                    <%- f.text_field("waist", {class: "form-control"}) %>
                </div>
                
                <div class="control-group">
                    <%- f.label_for("chest", {class : "control-label"}) %>
                    <%- f.text_field("chest", {class: "form-control"}) %>
                </div>
                
                <div class="control-group">
                    <%- f.label_for("hips", {class : "control-label"}) %>
                    <%- f.text_field("hips", {class: "form-control"}) %>
                </div>
                
                <div class="control-group">
                    <%- f.label_for("thigh", {class : "control-label"}) %>
                    <%- f.text_field("thigh", {class: "form-control"}) %>
                </div>
                
                <div class="control-group">
                    <%- f.label_for("calf", {class : "control-label"}) %>
                    <%- f.text_field("calf", {class: "form-control"}) %>
                </div>
                
                <div class="control-group">
                    <%- f.label_for("upperArm", {class : "control-label"}) %>
                    <%- f.text_field("upperArm", {class: "form-control"}) %>
                </div>
                
                <div class="control-group">
                    <%- f.label_for("forearm", {class : "control-label"}) %>
                    <%- f.text_field("forearm", {class: "form-control"}) %>
                </div>
                
                <div class="control-group">
                    <%- f.label_for("neck", {class : "control-label"}) %>
                    <%- f.text_field("neck", {class: "form-control"}) %>
                </div>
                
                <%- f.submit("Log Health Stats", {class : 'btn btn-warning'}) %>
                <% }) %>


            </div>
        </div>        
    </div>
</div>
