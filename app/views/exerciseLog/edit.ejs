<div class="row">
    <div class="col-md-6 col-md-offset-3 text-center">
        <div class="widget">
            <div class="header">
                <h3>Exercise Log - Edit</h3>
            </div>
        </div>

        <div class="toppad">
            <% form_for("exerciseLog", {controller: '/exerciseLog', action: '/edit'}, function(f){ %>

            <%- f.hidden_field("id") %>
            <%- hidden_field_tag("_csrf", {value: token}) %>


            <div class="form-group">
                <%- f.label_for("title", {class : "control-label"}) %>
                <%- f.text_field("title", {class: "form-control"}) %>
            </div>

            <div class="form-group">
                <%- f.label_for("sets", {class : "control-label"}) %>
                <%- f.number_field("sets", {class: "form-control"}) %>
            </div>

            <div class="form-group">
                <%- f.label_for("reps", {class : "control-label"}) %>
                <%- f.number_field("reps", {class: "form-control"}) %>
            </div>

            <div class="form-group">
                <%- f.label_for("start", {class : "control-label"}) %>
                <%- f.date("start", {class: "form-control"}) %>
            </div>

            <div class="form-group">
                <%- f.label_for("end", {class : "control-label"}) %>
                <%- f.date("end", {class: "form-control"}) %>
            </div>


            <%- f.submit("Edit", {class : 'btn btn-warning'}) %>
            <% }) %>
        </div>
    </div>
</div>

