<div class="row">
    <div class="col-md-6 col-md-offset-3 text-center">
        <div class="widget">
            <div class="header">
                <h3>Exercise Log - Delete</h3>
            </div>
        </div>

        <div class="toppad2">
            <fieldset>
                <legend>exerciseLog</legend>


                <label for="title">title:</label>
                <p><%- exerciseLog.title %></p>

                <label for="sets">sets:</label>
                <p><%- exerciseLog.sets %></p>

                <label for="reps">reps:</label>
                <p><%- exerciseLog.reps %></p>

                <label for="start">start:</label>
                <p><%- exerciseLog.start %></p>

                <label for="end">end:</label>
                <p><%- exerciseLog.end %></p>


                <% form_for('exerciseLog', {controller : '/exerciseLog', action: '/delete'}, function(f){ %>
                <%- f.hidden_field("id") %>
                <%- hidden_field_tag("_csrf", {value: token}) %>

                <p>
                    <%- f.submit("Delete", {class : 'btn btn-danger'}) %>
                </p>
                <% }) %>
            </fieldset>
        </div>
    </div>
</div>