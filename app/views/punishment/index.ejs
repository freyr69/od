<div class="row">
    <div class="col-md-6 col-md-offset-3 text-center">
        <div class="widget">

            <div class="header">
                <h3>Punishments</h3>
            </div>
        </div>
    </div>

    <% if (punishments.length > 0) { %>


    <div class="col-md-6 col-md-offset-3 text-center">
        <div class="widget">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <td>Description</td>
                        <td>Assigned</td>
                        <td>Started </td>
                        <td>Action</td>
                    </tr>
                </thead>
                <tbody>

                    <% punishments.forEach(function(punishment){ %>
                    <tr>
                        <td><%- punishment.description %></td>
                        <td><%- punishment.assigned %></td>
                        <td><%- punishment.start %></td>
                        <td>
                            <% if (punishment.start) { %>
                                <%- link_to('End', '/punishment/end/'+punishment.id, {class : 'btn'}) %>
                            <% } else { %>
                                <%- link_to('Start', '/punishment/start/'+punishment.id, {class : 'btn'}) %>
                            <% } %>
                        </td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
    
    <% } else { %>
    <div class="col-md-6 col-md-offset-3 text-center">
        <div class="widget">

            <p>
                Lucky you!  You don't have any assigned punishments.
            </p>

        </div>
    </div>
    <% } %>
    
    
    <div class="col-md-6 col-md-offset-3 text-center">
        <div class="widget toppad1">

            <p>
                <%- link_to('Request Punishment', '/punishment/random', {class : 'btn btn-info'}) %>
            </p>

        </div>
    </div>
</div>
