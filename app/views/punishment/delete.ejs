<h2 class="text-danger">Delete</h2>
<fieldset>
    <legend>punishment</legend>
    
      
            <label for="title">title:</label>
            <p><%- punishment.title %></p>
      
            <label for="description">description:</label>
            <p><%- punishment.description %></p>
      
            <label for="minDuration">minDuration:</label>
            <p><%- punishment.minDuration %></p>
      
            <label for="maxDuration">maxDuration:</label>
            <p><%- punishment.maxDuration %></p>
      

    <% form_for('punishment', {controller : '/punishment', action: '/delete'}, function(f){ %>
        <%- f.hidden_field("id") %>
        <%- hidden_field_tag("_csrf", {value: token}) %>
        
        <p>
            <%- f.submit("Delete", {class : 'btn btn-danger'}) %>
        </p>
    <% }) %>
</fieldset>

<%- link_to('back to list', '/punishment', {class : 'btn btn-primary'}) %>