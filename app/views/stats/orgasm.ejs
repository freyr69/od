                                    Masturbated
                                    <% } else if (l.type == 2) { %>
                                    Wet Dream
                                    <% } else if (l.type == 3) { %>
                                    Sex
                                    <% } else { %>
                                    <%= l.type %>
                                    <% } %>
                                </td>
                                <td>
                                    <%= l.count %>
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
            
            <div class="toppad2">
                <h4>Orgasm Listing</h4>
                
                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-condensed">
                        <thead>
                            <tr>
                                <th>Type</th>
                                <th>DateTime</th>
                                <th>Time Since</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% _.each(data, function(l) { %>
                            <tr>
                                <td>
                                    <% if (l.type == 1) { %>
                                    Masturbated
                                    <% } else if (l.type == 2) { %>
                                    Wet Dream
                                    <% } else if (l.type == 3) { %>
                                    Sex
                                    <% } else { %>
